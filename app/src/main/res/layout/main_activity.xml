<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/payWithCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay with card"
        android:textAllCaps="false"
        android:layout_marginTop="175dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:width="250dp"/>
    <Button
        android:id="@+id/payWithToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay with token"
        android:textAllCaps="false"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/payWithCard"
        android:width="250dp"
        />
    <Button
        android:id="@+id/payWith3DS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay 3ds secured payment"
        android:textAllCaps="false"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:width="250dp"
        app:layout_constraintTop_toTopOf="@id/payWithToken"
        />
    <Button
        android:id="@+id/payWithSavedCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay with saved cards"
        android:textAllCaps="false"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:width="250dp"
        app:layout_constraintTop_toTopOf="@id/payWith3DS"
        />

    <Button
        android:id="@+id/clearTokenData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Token Data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>